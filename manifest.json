{
  "manifest_version": 3,

  "name": "HSI-DW28 Checker",
  "description": "Compare current HSI futures series for Settrade DW28 and investing.com stream.",
  "version": "1.1",
  
  "author": {
    "email": "bingli224@gmail.com"
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "popup/popup.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],

  "action": {
    "default_icon": "images/128.png",
    "default_title": "HSI-DW28 Checker",
    "default_popup": "popup/popup.html"
  },
  "host_permissions": [
    "https://www.investing.com/*",
    "https://*.thaidw.com/",
    "https://www.hkex.com/*"
  ],

  "incognito": "split"
}